<p id="notice"><%= notice %></p>

  <div class="col-sm-8">
    <p>
      <strong>Title:</strong>
      <%= @post.title %>
    </p>

    <p>
      <strong>Body:</strong>
      <%= @post.body %>
    </p>

    <h2>Comments:</h2>
    <% @post.comments.each do |comment| %>
      <p>
        <b>Commenter:</b>
        <%= comment.commenter %>
      </p>

      <p>
        <b>Comment:</b>
        <%= comment.body %>
      </p>
    <% end %>

    <h2>Add a comment:</h2>
    <%= form_for([@post, @post.comments.build]) do |f| %>
      <div class="field">
        <%= f.label :commenter %><br>
        <%= f.text_field :commenter %>
      </div>
      <div class="field">
        <%= f.label :body %><br>
        <%= f.text_area :body %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>

    <br>
    
    <%= link_to 'Back', posts_path, {class: "btn btn-primary btn-sm"}%> |
    <%= link_to 'Edit Post', edit_post_path, {class: "btn btn-warning btn-sm"} %>
  </div>
</div>
