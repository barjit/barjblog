<h1> Index of posts </h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>


  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= link_to 'Show Post', post_path(post) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Create Post', new_post_path %>
