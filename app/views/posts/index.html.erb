<!-- Navigation Links -->
<div class="container">
  <nav class="navbar fixed-bottom navbar-light bg-faded" style="background-color: #e74c3c;">
    <%= link_to 'Home Page', root_path, { class: "navbar-brand" } %> |
    <%= link_to 'New Post', new_post_path, { class: "navbar-brand"} %>
  </nav>
</div>

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-2">
  </div>

  <div class="col-sm-8">
    <h1>Posts</h1>

    <table>
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><h3><%= post.title %></h3> -> posted <%= time_ago_in_words(post.created_at) %> ago </td>
            <td><%= link_to 'Show', post %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
