<p id="notice"><%= notice %></p>

<div class="col-sm-8">
  <h1>Posts</h1>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, post, {class: "btn btn-secondary btn-sm"} %></td>
          <td><%= link_to 'Edit', edit_post_path(post), {class: "btn btn-warning btn-sm"} %></td>
          <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Post', new_post_path, {class: "btn btn-primary btn-sm"} %>
</div>
