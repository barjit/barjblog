<h1> Blog Posts </h1>

<table>
  <% @posts.each do |post| %>
    <tr>
      <td><h3><%= link_to post.title, post_path(post) %></h3></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to 'Create Post', new_post_path %></p>
<p><%= link_to 'Home', welcome_index_path %></p>
